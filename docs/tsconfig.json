{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "types": ["node", "react", "react-dom"],
    "baseUrl": ".",
    "moduleResolution": "node16",
  "module": "Node16",
  "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolvePackageJsonExports": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.mdx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
